{
  "id": "bc-template-clouderamanager",
  "description": "Provides end-to-end management for Apache Hadoop with the ability to deploy and centrally operate a complete Hadoop stack. Gives you a cluster wide, real time view of nodes and services running and provides a single central place to enact configuration changes across your cluster. Cloudera Manager incorporates a full range of reporting and diagnostic tools to help you optimize cluster performance and utilization.",
  "attributes": {
    "clouderamanager": {
      "debug": false,
	  "admin_ip_eval": "Chef::Recipe::Barclamp::Inventory.get_network_by_type(node, \"admin\").address",
      "admin_interface_eval": "Chef::Recipe::Barclamp::Inventory.get_network_by_type(node, \"admin\").interface",
      "cmapi": {
          "deployment_type": "manual",
          "server_port": "7180",
          "username": "admin",
          "password": "admin",
          "use_tls": false,
          "version": "2"
      },
      "server": {
          "db_type": "postgresql"
      },
      "cluster": {
          "cluster_name": "cluster01",
          "cdh_version": "CDH4",
          "license_key": "",
		  "rack_id": "/default"
      }
    }
  },
  "deployment": {
    "clouderamanager": {
      "crowbar-revision": 0,
      "element_states": {
        "clouderamanager-cb-adminnode":   [ "readying", "ready", "applying" ],
        "clouderamanager-server":   [ "readying", "ready", "applying" ],
		"clouderamanager-namenode": [ "readying", "ready", "applying" ],
        "clouderamanager-edgenode": [ "readying", "ready", "applying" ],
        "clouderamanager-datanode": [ "readying", "ready", "applying" ],
        "clouderamanager-ha-journalingnode": [ "readying", "ready", "applying" ],
        "clouderamanager-ha-filernode": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [
          "clouderamanager-cb-adminnode",
          "clouderamanager-server",
          "clouderamanager-namenode",
          "clouderamanager-datanode",
          "clouderamanager-edgenode",
          "clouderamanager-ha-journalingnode",
          "clouderamanager-ha-filernode"
        ]
      ],
      "config": {
        "environment": "clouderamanager-base-config",
        "mode": "full",
        "transitions": true,
        "transition_list": [
          "installed"
        ]
      } 
    }
  }
}
